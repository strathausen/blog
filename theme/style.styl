color1 = LBrickRed
color2 = LMidnightBlue
bgcolor = white

@import "/code.css"

/* Ubuntu Mono Font */
@import url('http://fonts.googleapis.com/css?family=Ubuntu+Mono&subset=latin,latin-ext')
/* Junction Sans-Serif Font from the leagueofmovabletype.com */
@font-face
  font-family 'Junction'
  src url('/fonts/Junction-webfont.eot') // for IE
  src local('Junction'), \
    url('/fonts/Junction-webfont.woff') format('woff'), \
    url('/fonts/Junction-webfont.svg') format('svg'), \
    url('/fonts/Junction-webfont.ttf') format('truetype')

*
  font-family 'Junction'
  font-weight normal

body
  margin 0

header, footer
  background-image url('/bg000001.jpeg')
  background-size 100%
  margin-bottom 3em

header
  background-position-y 68%

footer
  background-position-y 74%

#content
  width     75%
  min-width 450px
  max-width 560px
  margin    auto

a, footer, header, h1, h2, h3, .title
  color LBrickRed

nav a, p, li, .date
  color LMidnightBlue

header h1
  font-size        2.4em
  background-color bgcolor
  display          inline-block
  padding          .2em .4em

header, footer
  text-align left
  padding    .2em 0 0 0

footer
  margin-bottom 3em

h2
  margin 2em 0 1em 0

h3
  margin 2em 0 1em 0

a
  text-decoration none

#content p, #content li
  line-height 1.8em

pre
  font-family 'Ubuntu Mono' !important
  margin      0 0.2em
  padding     .8em 1.1em
  max-width   56em

code, code span
  font-family 'Ubuntu Mono'

ul.index
  list-style none

/* on the article page */
.article .date
  width         180px
  display       block
  position      relative
  text-align    right
  left          -195px
  top           20px
  margin-bottom -50px
  height        1.1em

/* on the index page */
ul.index li span
  display inline-block

ul.index li span.date
  width         30%
  min-width     160px
  text-align    right
  padding-right .6em

ul.index li span.title
  min-width 320px

ul.index li
  line-height 2.6em!important

ul.navigation
  padding    0
  list-style none

.navigation li
  background-color bgcolor
  display inline-block
  padding .3em .5em
  margin 0 1em

