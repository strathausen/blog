---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE } from "../consts";

const projects = [
  {
    name: "thefoodie.space",
    url: "https://www.thefoodie.space",
    github: "https://github.com/strathausen/thefoodiespace",
    image: "/images/projects/thefoodiespace.png",
    description:
      "a link-in-bio for food creators. sync your tiktok food posts and get a beautiful profile page at thefoodie.space/~username. videos get processed by ai into written recipes. like linktree, but specifically for food bloggers.",
    tech: ["next.js", "drizzle", "postgres", "openai"],
    blogPosts: [
      { title: "pivoting to a tiktok link-in-bio", url: "/blog/thefoodiespace-relaunch/" },
      { title: "rebranding my recipe platform", url: "/blog/thefoodiespace/" },
    ],
  },
  {
    name: "pleeboo",
    url: "https://www.pleeboo.com",
    github: "https://github.com/strathausen/pleeboo",
    image: "/images/projects/pleeboo.png",
    description:
      "a free tool for organizing community events and coordinating volunteers. create pledge boards where people can sign up to bring things or help out - no sign-ups or credit cards required.",
    tech: ["next.js", "react", "typescript"],
    blogPosts: [
      { title: "a who-brings-what app", url: "/blog/pleeboo/" },
    ],
  },
  {
    name: "laundryroom.social",
    url: "https://www.laundryroom.social",
    github: "https://github.com/strathausen/laundryroom.social",
    image: "/images/projects/laundryroom.png",
    description:
      "a free meetup alternative to organize community events. built out of frustration with meetup.com's pricing. open source and available on github.",
    tech: ["next.js", "prisma", "postgres", "typescript"],
    blogPosts: [
      { title: "launching a free meetup alternative", url: "/blog/laundryroom-social-launch/" },
    ],
  },
  {
    name: "commentable.space",
    url: "https://www.commentable.space",
    github: "https://github.com/strathausen/commentable",
    image: "/images/projects/commentable.png",
    description:
      "a self-hosted commenting system for websites. features ai-powered moderation to filter unwanted content. privacy-first and easy to deploy via embed snippet.",
    tech: ["swift", "vapor", "vanilla js"],
    blogPosts: [
      { title: "building a self-hosted commenting system", url: "/blog/commentable/" },
    ],
  },
  {
    name: "tomatovillage",
    url: "https://www.tomatovillage.com",
    image: "/images/projects/tomatovillage.png",
    description:
      "a recipe sharing community where people can create, share, and discover recipes. features a recipe editor, social interactions like likes and comments, ai-powered content moderation, and algolia search.",
    tech: ["next.js", "prisma", "postgres", "trpc", "openai", "algolia"],
    blogPosts: [
      { title: "building a recipe sharing community", url: "/blog/tomatovillage/" },
    ],
  },
];
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={`projects | ${SITE_TITLE}`} description="open source side projects by philipp strathausen - free meetup alternative, recipe sharing platform, self-hosted commenting system, and more. built with react, typescript, next.js, and postgres." />
    <style>
      h1 {
        margin-bottom: 0.5rem;
      }
      .intro {
        color: rgb(var(--gray-dark));
        margin-bottom: 3rem;
        line-height: 1.6;
      }
      .projects {
        display: flex;
        flex-direction: column;
        gap: 3rem;
      }
      .project {
        display: flex;
        gap: 2rem;
        align-items: flex-start;
      }
      .project-image {
        flex-shrink: 0;
        width: 400px;
        border-radius: 8px;
        box-shadow: var(--box-shadow);
      }
      .project-content {
        flex: 1;
      }
      .project-title {
        margin: 0 0 0.5rem 0;
        font-size: 1.5rem;
      }
      .project-title a {
        color: rgb(var(--black));
        text-decoration: none;
      }
      .project-title a:hover {
        color: rgb(var(--accent));
      }
      .github-link {
        font-size: 0.8rem;
        margin-top: 0.75rem;
        display: inline-flex;
        align-items: center;
        gap: 0.4rem;
        padding: 0.3rem 0.6rem;
        background: rgb(var(--gray-light));
        border-radius: 4px;
        color: rgb(var(--gray-dark));
        text-decoration: none;
        transition: background 0.2s ease;
      }
      .github-link:hover {
        background: rgb(var(--gray));
        color: rgb(var(--white, 255 255 255));
      }
      .github-link svg {
        width: 16px;
        height: 16px;
      }
      .blog-posts {
        margin-top: 0.75rem;
        font-size: 0.85rem;
      }
      .blog-posts-label {
        color: rgb(var(--gray));
        margin-right: 0.5rem;
      }
      .blog-posts a {
        color: rgb(var(--accent));
        text-decoration: none;
      }
      .blog-posts a:hover {
        text-decoration: underline;
      }
      .blog-posts .separator {
        margin: 0 0.5rem;
        color: rgb(var(--gray));
      }
      .project-description {
        margin: 0 0 0.75rem 0;
        color: rgb(var(--gray-dark));
        line-height: 1.6;
      }
      .project-tech {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin: 0;
        padding: 0;
        list-style: none;
      }
      .project-tech li {
        font-size: 0.8rem;
        padding: 0.2rem 0.5rem;
        background: rgb(var(--gray-light));
        border-radius: 4px;
        color: rgb(var(--gray-dark));
      }
      @media (max-width: 720px) {
        .project {
          flex-direction: column;
        }
        .project-image {
          width: 100%;
        }
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <h1>side projects</h1>
      <p class="intro">
        i build things for fun and to learn. these are some of the projects i've been working on in my spare time.
      </p>
      <div class="projects">
        {
          projects.map((project) => (
            <article class="project">
              <a href={project.url} target="_blank" rel="noopener noreferrer">
                <img
                  class="project-image"
                  src={project.image}
                  alt={`screenshot of ${project.name}`}
                />
              </a>
              <div class="project-content">
                <h2 class="project-title">
                  <a href={project.url} target="_blank" rel="noopener noreferrer">
                    {project.name}
                  </a>
                </h2>
                <p class="project-description">{project.description}</p>
                <ul class="project-tech">
                  {project.tech.map((t) => <li>{t}</li>)}
                </ul>
                {project.github && (
                  <a href={project.github} target="_blank" rel="noopener noreferrer" class="github-link">
                    <svg viewBox="0 0 16 16" fill="currentColor"><path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z"/></svg>
                    github
                  </a>
                )}
                {project.blogPosts && project.blogPosts.length > 0 && (
                  <div class="blog-posts">
                    <span class="blog-posts-label">read more:</span>
                    {project.blogPosts.map((post, i) => (
                      <>
                        {i > 0 && <span class="separator">Â·</span>}
                        <a href={post.url}>{post.title}</a>
                      </>
                    ))}
                  </div>
                )}
              </div>
            </article>
          ))
        }
      </div>
    </main>
    <Footer />
  </body>
</html>
