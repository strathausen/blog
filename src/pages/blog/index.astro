---
import BaseHead from "../../components/BaseHead.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { SITE_TITLE } from "../../consts";
import { getCollection } from "astro:content";
import FormattedDate from "../../components/FormattedDate.astro";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const pageTitle = `blog | ${SITE_TITLE}`;
const pageDescription = "articles about building side projects, full stack development, open source tools, and lessons learned from shipping saas products. topics include react, typescript, postgres, ai integrations, and more.";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={pageTitle} description={pageDescription} />
    <style>
      ul {
        list-style-type: none;
        margin: 0;
        padding: 0;
      }
      ul li {
        margin-bottom: 2.5rem;
      }
      ul li a {
        display: block;
        text-decoration: none;
        transition: 0.2s ease;
      }
      ul li a:hover .title {
        color: var(--accent);
      }
      .post-header {
        display: flex;
        align-items: baseline;
        gap: 0.75rem;
        flex-wrap: wrap;
        margin-bottom: 0.4rem;
      }
      .title {
        margin: 0;
        color: rgb(var(--black));
        line-height: 1.3;
        font-size: 1.2rem;
      }
      .date {
        margin: 0;
        color: rgb(var(--gray));
        font-size: 0.85rem;
        white-space: nowrap;
      }
      .post-description {
        margin: 0;
        font-size: 0.95rem;
        color: rgb(var(--gray-dark));
        line-height: 1.5;
      }
      .page-intro {
        margin-bottom: 2.5rem;
      }
      .page-intro h1 {
        margin-bottom: 0.5rem;
      }
      .page-intro p {
        color: rgb(var(--gray-dark));
        line-height: 1.6;
        margin: 0;
      }
      @media (max-width: 720px) {
        .post-header {
          flex-direction: column;
          gap: 0.25rem;
        }
      }
    </style>
  </head>
  <body>
    <div class="page-wrapper">
    <Header />
    <main>
      <section>
        <div class="page-intro">
          <h1>blog</h1>
          <p>
            i write about building side projects, full stack development, and lessons learned from shipping software.
            most of my work involves react, typescript, postgres, and experimenting with ai integrations.
            check out my <a href="/projects">projects</a> to see what i'm currently working on.
          </p>
        </div>
        <ul>
          {
            posts.map((post) => (
              <li>
                <a href={`/blog/${post.slug}/`}>
                  <div class="post-header">
                    <h4 class="title">{post.data.title}</h4>
                    <span class="date"><FormattedDate date={post.data.pubDate} /></span>
                  </div>
                  {post.data.description && (
                    <p class="post-description">{post.data.description}</p>
                  )}
                </a>
              </li>
            ))
          }
        </ul>
      </section>
    </main>
    <Footer />
    </div>
  </body>
</html>
