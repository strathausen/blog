---
import BaseHead from "../../components/BaseHead.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { SITE_TITLE } from "../../consts";
import { getCollection } from "astro:content";
import FormattedDate from "../../components/FormattedDate.astro";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const pageTitle = `blog | ${SITE_TITLE}`;
const pageDescription = "articles about building side projects, full stack development, open source tools, and lessons learned from shipping saas products. topics include react, typescript, postgres, ai integrations, and more.";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={pageTitle} description={pageDescription} />
    <style>
      ul {
        display: flex;
        flex-wrap: wrap;
        gap: 2rem;
        list-style-type: none;
        margin: 0;
        padding: 0;
      }
      ul li {
        width: 100%;
        text-align: left;
      }
      ul li * {
        text-decoration: none;
        transition: 0.2s ease;
      }
      ul li img {
        margin-bottom: 0.5rem;
        border-radius: 12px;
      }
      ul li a {
        display: block;
      }
      .title {
        margin: 0;
        color: rgb(var(--black));
        line-height: 1;
      }
      .date {
        margin: 0;
        color: rgb(var(--gray));
      }
      ul li a:hover h4,
      ul li a:hover .date {
        color: rgb(var(--accent));
      }
      ul a:hover img {
        box-shadow: var(--box-shadow);
      }
      .page-intro {
        margin-bottom: 2rem;
      }
      .page-intro h1 {
        margin-bottom: 0.5rem;
      }
      .page-intro p {
        color: rgb(var(--gray-dark));
        line-height: 1.6;
        margin: 0;
      }
      .post-description {
        margin: 0.25rem 0 0 0;
        font-size: 0.9rem;
        color: rgb(var(--gray-dark));
        line-height: 1.4;
      }
      @media (max-width: 720px) {
        ul {
          gap: 0.5em;
        }
        ul li {
          width: 100%;
          text-align: left;
        }
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <section>
        <div class="page-intro">
          <h1>blog</h1>
          <p>
            i write about building side projects, full stack development, and lessons learned from shipping software.
            most of my work involves react, typescript, postgres, and experimenting with ai integrations.
            check out my <a href="/projects">projects</a> to see what i'm currently working on.
          </p>
        </div>
        <ul>
          {
            posts.map((post) => (
              <li>
                <a href={`/blog/${post.slug}/`}>
                  <h4 class="title">{post.data.title}</h4>
                  <p class="date">
                    <FormattedDate date={post.data.pubDate} />
                  </p>
                  {post.data.description && (
                    <p class="post-description">{post.data.description}</p>
                  )}
                </a>
              </li>
            ))
          }
        </ul>
      </section>
    </main>
    <Footer />
  </body>
</html>
